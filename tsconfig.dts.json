{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowArbitraryExtensions": true,
        "skipLibCheck": true,

        "target": "ESNext",
         // "lib": ‹defaut›
        //  "module": "ESNext",
         "module": "preserve",
         "esModuleInterop": true,
        "types": ["node"],
        // "verbatimModuleSyntax": true,

        "moduleResolution": "bundler",
        "customConditions": ["dev"],
        "baseUrl": "dist/",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        // "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        "outDir": "./dist/types",        
        // "outFile": "./.stellar/api/stellar-tokenomics-raw.d.ts",
        // "importHelpers": true,
        "rootDir": ".",
        
        // "exactOptionalPropertyTypes": true,        
        "noImplicitAny": false,
        "noErrorTruncation": true,

        // "importHelpers": true,
        // "baseUrl": ".",

        // "skipLibCheck": true,

        // "noResolve": true,
        // "disableReferencedProjectLoad": false,
        "paths": {
            // "stellar-tokenomics": ["./src/index.ts"],
            "src/*": ["./src/*"]
        }
        // "plugins": [],
        // "outFile": "dist/index.d.ts",
    },
    "files": [
        "./heliosModule.d.ts"
    ],
    "include": [
        // "lib/**/*.json", 
        // "src/**/*.hl",
        // "lib/**/*.ts", 
        // "lib/**/*.js", 
    ],
    "exclude": [
        "node_modules",
        // "src/**/*.ts",
        "**/node_modules/"
    ]
}
