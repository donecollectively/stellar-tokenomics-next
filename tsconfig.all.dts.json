{
    "$schema": "http://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist/types/",        
        "declarationDir": "./dist/types/",
        "emitDeclarationOnly": true,

        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowArbitraryExtensions": true,
        "skipLibCheck": true,

        "target": "ESNext",
         // "lib": ‹defaut›
        //  "module": "ESNext",
         "module": "preserve",
         "esModuleInterop": true,
        "types": ["node"],
        // "verbatimModuleSyntax": true,

        "moduleResolution": "bundler",
        "customConditions": ["dev"],
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        // "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        // "outFile": "./.stellar/api/stellar-tokenomics-raw.d.ts",
        // "importHelpers": true,
        
        // "exactOptionalPropertyTypes": true,        
        "noImplicitAny": false,
        "noErrorTruncation": true,


        "paths": {
            "stellar-tokenomics": ["./src/index.ts"]
        }
    },
    "files": [
        "src/index.ts",
        "src/heliosModule.d.ts"
    ],
    "exclude": [
        // not needed because they're not in include or files ^
        // "**/node_modules/",
        // "./.stellar/**/*"
    ]
}







